<%= if success = live_flash(@flash, :success) do %>
  <Components.alert msg={success} />
<% end %>
<%= if info = live_flash(@flash, :info) do %>
  <Components.alert msg={info} />
<% end %>
<%= if error = live_flash(@flash, :error) do %>
  <Components.alert msg={error} />
<% end %>
<%= @inner_content %>
